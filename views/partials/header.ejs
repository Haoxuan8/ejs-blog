<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <link rel="stylesheet"
      href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.18.1/build/styles/default.min.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/fonts/css/all.css">
    <link rel="icon" type="image/jpg" href="/imgs/icons/icon.jpg" sizes="32x32">
</head>
<body>
    <div class="background"></div>
    <div id="header">
        <div id="web-title">
            <a href="/"><h1>绘空事</h1></a>
        </div>
        <nav class="header-fade-in">
            <% menu.forEach(function(item) { %>
                <% if(item.display) {%> 
                <div class="nav-item">
                    <a href="<%= item.path %>">
                        <i class="<%= item.icon %>"></i>
                        <p><%= item.title %></p>
                    </a>
                </div>
                <% } %> 
            <% }) %> 

            <% if(currUser) { %>
                <div class="nav-item">
                    <a href="/logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <p>登出</p>
                    </a>
                </div>
            <% } else { %>  
                <div class="nav-item">
                    <a href="/login">
                        <i class="fas fa-user"></i>
                        <p>登录</p>
                    </a>
                </div>
            </div>               
            <% } %> 
        </nav>
    </div>
</transition>